<%= form_for(@user, html: {:class => "form-horizontal"}) do |f| %>
  <% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

    <ul>
      <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <div class="form-group">
    <div class="field">
      <%= f.label :first_name, :class => 'control-label col-md-2' %>

      <div class='form-controls col-md-4'>
        <%= f.text_field :first_name, :class => 'form-control' %>
      </div>
    </div>
  </div>


  <div class="form-group">
    <div class="field">
      <%= f.label :last_name, :class => 'control-label col-md-2' %>

      <div class='form-controls col-md-4'>
        <%= f.text_field :last_name, :class => 'form-control' %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="field">
      <%= f.label :email, :class => 'control-label col-md-2' %>

      <div class='form-controls col-md-4'>
        <%= f.email_field :email, :class => 'form-control' %>
      </div>
    </div>
  </div>




  <div class="form-group">
    <div class="col-md-offset-2 col-md-4">
      <%= f.submit @submit_name, :class => 'btn btn-primary'%>
      <%= link_to 'cancel', users_path, class: 'btn btn-default'%>
      <% if @user.id != nil %>
      <%= link_to 'Delete', user_path, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %>
      <% end %>
    </div>
  </div>

  <% end %>
